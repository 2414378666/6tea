/**index.wxss**/
.container {
  background-color: #F9F9F9;
}
.card {
  width: 90%;
  margin: auto;
  border-radius: 40rpx;
  box-shadow:0px 30rpx 20rpx -30rpx rgba(0, 0, 0, .4);
  overflow: hidden;
  background-color: #fff;
}
.img {
  width: 100%;
  height: 100%;
}
.texts {
  padding-top: 10rpx;
  font-size: 36rpx;
}
.text {
  text-align: center;
  color: #49B1B5;
  margin-right: 10rpx;
  padding: 16rpx 0;
}
.sonBox {
  height: 240rpx;
  display: inline-block;
}
.sonBox cover-image {
  width: 210rpx;
  height: 240rpx;
  border-radius: 40rpx;
}
.option {
  position: relative;
  padding: 10rpx 10rpx;
  border-bottom: 2rpx solid #DDDDDD;
}
.title {
  position: absolute;
  top: 20rpx;
  left: 230rpx;
  font-weight: 700;
}
.evaluate {
  position: absolute;
  top: 80rpx;
  left: 230rpx;
}
.monys {
  position: absolute;
  top: 190rpx;
  left: 230rpx;
  display: flex;
  justify-content: space-between;
  width: 420rpx;
  font-size: 24rpx;
}